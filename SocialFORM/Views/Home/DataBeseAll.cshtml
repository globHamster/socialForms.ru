    </div>
</div>




<script type="text/javascript">
    let pool_data = {};
    let countDip;
    $(function () {
        $('div#txt_1').load("/Home/Test");

        $('label').click(function () {
            if ($(this).attr('name') == 'tab1') {
                $('div#txt_1').empty().load("/Home/Test");
            } else if ($(this).attr('name') == 'tab6') {
                $('div#txt_6').empty().load("/Phone/SyncWithBlanksView");
            } else if ($(this).attr('name') == 'tab4') {
                $('div#txt_4').empty().load("/Phone/GeneratorView");
            }

        })
        $('div#txt_3').load("/Phone/DataBaseView");
        $('div#txt_5').load("/Phone/PrimaryTableView");
    })

    $('body').on("click", ".hide1", function () {
        if ($(this).hasClass("HideOn")) {
            $(this).next().slideDown(1000);
            $(this).removeClass("HideOn");
        } else {
            $(this).next().slideUp(1000);
            $(this).addClass("HideOn");
        }
    });

    $('body').on("click", ".hide2", function () {
        if ($(this).hasClass("HideOn")) {
            $(this).next().slideDown(1000);
            $(this).removeClass("HideOn");
        } else {
            $(this).next().slideUp(1000);
            $(this).addClass("HideOn");
        }
    });
</script>