<style>
    .loader {
        position: relative;
        left: 50%;
        top: 50%;
        z-index: 1;
        width: 150px;
        height: 150px;
        margin: -75px 0 0 -75px;
        border: 16px solid #f3f3f3;
        border-radius: 50%;
        border-top: 16px solid #3498db;
        width: 120px;
        height: 120px;
        -webkit-animation: spin 2s linear infinite;
        animation: spin 2s linear infinite;
    }


    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    .loading {
        position: fixed;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(200, 200, 200, 0.7);
    }
    .BugReport {
        position: fixed;
        display: flex;
        justify-content: center;
        align-content: space-between;
        align-items: center;
        flex-direction: column;
        opacity: 0;
        width: 100%;
        height: 60px;
        left: 0px;
        top: 100vh;
        background-color: #f44336;
        font-family: 'Century Gothic';
        font-size: 20px;
        font-weight: 600;
        z-index: 1009;
    }
    .ShowDown {
        transform: translateY(-60px);
        opacity: 1;
        transition: .5s linear;
    }
</style>
<div class="begin_form">
    <button class="begin_form">Начать анкету</button>
</div>
<div class="BugReport">Ошибка! Проект пустой</div>
<script type="text/javascript">
    $(function () {

        $.get("/Question/getListQuestion", { id_p: @ViewBag.ProjectID})
                .success(function (server_data) {
                    if (server_data.length <= 1) {
                        $('.begin_form').hide();
                        $('.BugReport').addClass('ShowDown').animate({ opacity: "1" }, 500);
                        setTimeout(function () {
                            $('.BugReport').removeClass('ShowDown');
                            $('.Tables').load("/Home/ProjectOperator");
                        }, 3000)
                    }
                })

        $('button.begin_form').one("click", function () {
            $('.PreLoader').show();
            $("#Tables").load("/Form/FormView?id_p=" + @ViewBag.ProjectID);
            
        })
    })
    
</script>