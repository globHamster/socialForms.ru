<style>
    .loader {
        position: relative;
        left: 50%;
        top: 50%;
        z-index: 1;
        width: 150px;
        height: 150px;
        margin: -75px 0 0 -75px;
        border: 16px solid #f3f3f3;
        border-radius: 50%;
        border-top: 16px solid #3498db;
        width: 120px;
        height: 120px;
        -webkit-animation: spin 2s linear infinite;
        animation: spin 2s linear infinite;
    }


    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    .loading {
        position: fixed;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(200, 200, 200, 0.7);
    }
</style>
<div class="begin_form">
    <button class="begin_form">Начать анкету</button>
</div>

<script type="text/javascript">
    $(function () {

        $('button.begin_form').one("click", function () {
                $('body').append('<div class="loading"></div>');
                $('.loading').show();
                $('.loading').append('<div class="loader"></div>')
               
                $("#Tables").load("/Form/FormView?id_p=" + @ViewBag.ProjectID, '', function () { $('.loading').hide(); });
            
        })
    })
    
</script>